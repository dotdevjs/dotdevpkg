{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nestpkg/crud": ["packages/nest/crud/src/index.ts"],
      "@nestpkg/core": ["packages/nest/core/src/index.ts"],
      "@nestpkg/typeorm": ["packages/nest/typeorm/src/index.ts"],
      "@reactpkg/inversify": ["packages/react/inversify/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
